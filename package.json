{
  "name": "linter-swagger",
  "main": "./lib/main",
  "version": "0.4.2",
  "description": "Lint Swagger files on the fly, using swagger-parser",
  "keywords": [
    "swagger",
    "linter",
    "atom"
  ],
  "repository": "https://github.com/AtomLinter/linter-swagger",
  "license": "MIT",
  "engines": {
    "atom": ">=1.9.0 <2.0.0"
  },
  "package-deps": [
    "linter"
  ],
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "scripts": {
    "test": "apm test",
    "lint": "eslint ."
  },
  "dependencies": {
    "atom-package-deps": "^4.0.1",
    "swagger-parser": "3.4.2",
    "lodash": "^4.16.4",
    "yaml-js": "^0.2.0"
  },
  "devDependencies": {
    "eslint": "^4.14.0",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "jasmine-fix": "^1.3.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "global-require": "off",
      "import/extensions": [
        "off",
        "never"
      ],
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "atom"
          ]
        }
      ]
    },
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "atom": true
    }
  }
}
